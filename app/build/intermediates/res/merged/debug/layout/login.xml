<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    android:weightSum="1"
    android:gravity="center"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:text="Usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_login_usuario"
                android:textSize="36sp"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/topo_login" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text|textPersonName"
                android:ems="10"
                android:id="@+id/ent_login_usuario"
                android:layout_weight="0.02"
                android:textSize="@dimen/tamanho_texto_botaologin" />

            <TextView
                android:text="Senha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_login_senha"
                android:textSize="36sp"
                android:textAlignment="center" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/ent_login_senha"
                android:layout_weight="0.03"
                android:textSize="@dimen/tamanho_texto_botaologin" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <Button
                    android:text="Logar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@id/bt_login_logar"
                    android:background="#393939"
                    android:textColor="@color/cor_texto_calculadora"
                    android:textSize="@dimen/tamanho_texto_botaologin"
                    tools:gravity="center"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:layout_weight="0.15"
                    android:layout_marginTop="@dimen/margem_botoes_calduladora"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp" />
                <Button
                    android:text="Cancelar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@id/bt_login_cancelar"
                    android:background="#393939"
                    android:textColor="@color/cor_texto_calculadora"
                    android:textSize="@dimen/tamanho_texto_botaologin"
                    tools:gravity="center"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:layout_weight="0.08"
                    android:layout_marginTop="@dimen/margem_botoes_calduladora" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
