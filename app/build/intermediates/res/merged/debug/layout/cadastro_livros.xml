<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    android:layout_centerHorizontal="true">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:text="Cadastro Nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="49dp"
                android:id="@+id/tv_cadl_nome"
                android:textSize="36sp"
                android:textAlignment="center" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Autor"
                android:ems="10"
                android:id="@+id/ent_cadl_autor"
                android:textSize="36sp"
                />

            <TextView
                android:text="Editora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_cadl_editora"
                android:textSize="36sp"
                android:textAlignment="center" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Editora"
                android:ems="10"
                android:id="@+id/ent_cadl_editora"
                android:textSize="36sp" />

            <TextView
                android:text="Tipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_cadl_tipo"
                android:textSize="36sp"
                android:textAlignment="center" />

            <CheckBox
                android:text="tipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:id="@+id/cb_cadl_tipo"
                android:textSize="36sp"
                android:layout_marginRight="32dp"
                android:layout_marginEnd="32dp" />

            <CheckBox
                android:text="tipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cb_cadl_tipo2"
                android:textSize="36sp"
                />

            <TextView
                android:text="genero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_cadl_genero"
                android:textSize="36sp"
                android:textAlignment="center" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/ent_cadl_genero"
                android:textSize="36sp"
                android:textAlignment="center"
                android:layout_marginTop="13dp"

                />

            <TextView
                android:text="descricao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_cadl_descricao"
                android:textSize="36sp" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:text="Cadastrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="99dp"
        android:id="@+id/bt_cadl_cadastrar"
        android:textSize="36sp"
        android:background="@color/botoes_trabalho"
        android:textColor="?android:attr/fastScrollTextColor"
        />

    <Button
        android:text="Cancelar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bt_cadl_cancelar"
        android:textSize="36sp"
        android:background="@color/botoes_trabalho"
        android:textColor="?android:attr/fastScrollTextColor"
         />

    <TextView
        android:text="Autor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_cadl_autor"
        android:textSize="36sp"
        android:layout_marginTop="52dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/ent_cadl_nome"
        android:textSize="36sp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/ent_cadl_descricao"
        android:textSize="36sp"
    />


</LinearLayout>
